<!doctype html>
<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
  </head>
  <body>

  {% include "components/navbar.html.jinja"%}
      {% for message in get_flashed_messages() %}
      <li>{{message}}</li>

  {%endfor%}
   
  <form method="POST" class="flex flex-col gap-4 max-w-md mx-auto p-4">
    
 
    <label for="name">Username (this will appear on your shipped orders)</label>
    <input
      type="text"
      name="name"
      id="name"
      required
      placeholder="Enter your username"
      class="border px-2 py-1 rounded"
    >

    
    <label for="email">Email</label>
    <input
      type="email"
      name="email"
      id="email"
      required
      placeholder="example@domain.com"
      class="border px-2 py-1 rounded"
    >

   
    <label for="password">Password</label>
    <input
      type="password"
      name="password"
      id="password"
      required
      placeholder="Enter a secure password"
      class="border px-2 py-1 rounded"
    >

    
    <label for="confirm_password">Confirm Password</label>
    <input
      type="password"
      name="confirm_password"
      id="confirm_password"
      required
      placeholder="Re-enter your password"
      class="border px-2 py-1 rounded"
    >


    <label for="birthday">Birthday</label>
    <input
      type="date"
      name="birthday"
      id="birthday"
      required
      class="border px-2 py-1 rounded"
    >

   
    <button
      type="submit"
      class="bg-blue-600 text-white rounded px-4 py-2 mt-2 hover:bg-blue-700"
    >
      Register
    </button>
    <a href="/login"
       class="block text-center text-blue-600 font-medium hover:underline">
       Have an account? Login
    </a>
  </form>

  </body>
</html>
